---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main class="main">
		<div class="container">
			<div class="main__inner">
				<h2 class="main__title">Webforyou</h2>
			</div>
		</div>
	</main>

	<section id="about"></section>


	<section class="menu">
		<div class="container">
			<div class="menu__inner">
				<nav class="menu__navigation">
					<ul class="menu__navigation-list">
						<li class="menu__navigation-item"><a class="menu__navigation-link" href="/">Главная</a></li>
						<li class="menu__navigation-item"><a class="menu__navigation-link" href="#about">О нас</a></li>
					</ul>
				</nav>
			</div>
		</div>
	</section>
</Layout>

<style>
	.main {
		height: 100vh;
		background-color: #fff;
	}
	.main .container {
		position: sticky;
		top: 123px;
		filter: blur(2.66667px);
	}

	.main__inner {
		position: absolute;
		left: 0;
		right: 0;
	}

	.main__title {
		text-align: center;
		font-size: 5rem;
		line-height: 1;
		font-weight: 500;
		opacity: 0.3;
	}
	#about {
		position: relative;
		min-height: 2000px;
		background-color: #2c2c2c;
	}
	
	.menu {
		position: fixed;
		top: -100vh;
		right: 0;
		bottom: 100vh;
		left: 0;
		visibility: hidden;
		background-color: #373e4d;
		padding-top: 123px;
		overflow-y: auto;

		transition: all 0.5s ease;

	}
	.menu.is-open {
		top: 0;
		bottom: 0;
		visibility: visible;
	}
	.menu__navigation-link {
		color: #fff;
		font-size: 5rem;
		font-weight: 500;
	}
</style>
